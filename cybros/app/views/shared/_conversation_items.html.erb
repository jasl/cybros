<% conversations = Array(conversations) %>

<% conversations.each do |conversation| %>
  <li>
    <%= link_to conversation_path(conversation), class: "truncate #{'menu-active' if active_nav?(conversation_path(conversation))}" do %>
      <span class="truncate"><%= conversation.title.presence || "(untitled)" %></span>
    <% end %>
  </li>
<% end %>
