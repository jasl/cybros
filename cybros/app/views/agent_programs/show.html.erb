<div class="p-6 space-y-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h1 class="text-2xl font-semibold"><%= @agent_program.name %></h1>
      <p class="opacity-70 text-sm">Profile: <span class="font-mono"><%= @agent_program.profile_source %></span></p>
      <p class="opacity-70 text-sm">Local path: <span class="font-mono text-xs"><%= @agent_program.local_path %></span></p>
    </div>
    <%= link_to "Back", agent_programs_path, class: "btn btn-ghost" %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h2 class="card-title">agent.yml</h2>
        <pre class="bg-base-200 rounded p-3 overflow-auto text-xs"><code><%= YAML.dump(@loaded.agent_yml || {}).strip %></code></pre>
      </div>
    </div>

    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h2 class="card-title">AGENT.md</h2>
        <pre class="bg-base-200 rounded p-3 overflow-auto text-xs"><code><%= @loaded.agent_md.to_s %></code></pre>
      </div>
    </div>

    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h2 class="card-title">SOUL.md</h2>
        <pre class="bg-base-200 rounded p-3 overflow-auto text-xs"><code><%= @loaded.soul_md.to_s %></code></pre>
      </div>
    </div>

    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h2 class="card-title">USER.md</h2>
        <pre class="bg-base-200 rounded p-3 overflow-auto text-xs"><code><%= @loaded.user_md.to_s %></code></pre>
      </div>
    </div>

    <div class="card bg-base-100 shadow lg:col-span-2">
      <div class="card-body">
        <h2 class="card-title">prompts/system.md.liquid</h2>
        <pre class="bg-base-200 rounded p-3 overflow-auto text-xs"><code><%= @loaded.system_md_liquid.to_s %></code></pre>
      </div>
    </div>
  </div>
</div>

