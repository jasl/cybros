<%= render layout: "shared/settings_shell" do %>
  <div class="space-y-6">
    <div class="flex items-center justify-between gap-4">
      <h2 class="text-lg font-semibold">Edit LLM provider</h2>
      <div class="flex items-center gap-2">
        <%= button_to "Fetch Models", fetch_models_system_settings_llm_provider_path(@llm_provider), method: :post, class: "btn btn-secondary btn-sm" %>
        <%= button_to "Delete", system_settings_llm_provider_path(@llm_provider), method: :delete, class: "btn btn-ghost btn-sm", data: { turbo_confirm: "Delete this provider?" } %>
      </div>
    </div>

    <%= render "form", llm_provider: @llm_provider %>
  </div>
<% end %>
