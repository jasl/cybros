<div class="min-h-screen flex items-center justify-center p-6">
  <div class="card w-full max-w-md bg-base-100 shadow">
    <div class="card-body">
      <h1 class="card-title text-2xl">Set up Cybros</h1>
      <p class="text-sm opacity-70">Create the initial owner account.</p>

      <%= form_with model: @identity, url: setup_path, class: "space-y-4" do |f| %>
        <div class="space-y-2">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <%= f.email_field :email, required: true, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>

        <div class="space-y-2">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">Password</span>
          <% end %>
          <%= f.password_field :password, required: true, minlength: 8, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <div class="space-y-2">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm password</span>
          <% end %>
          <%= f.password_field :password_confirmation, required: true, minlength: 8, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Create account</button>
      <% end %>
    </div>
  </div>
</div>

